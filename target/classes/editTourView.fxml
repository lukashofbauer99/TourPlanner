<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" prefHeight="300" prefWidth="300" vgap="10" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Views.Tours.TourEditViewController">

    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints hgrow="ALWAYS" />
        <ColumnConstraints />
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
    </rowConstraints>

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <Label GridPane.columnSpan="4" GridPane.halignment="CENTER" GridPane.rowIndex="0">Create Tour</Label>

    <Label GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="1">Name</Label>
    <TextField fx:id="name" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.halignment="LEFT" GridPane.rowIndex="1" />

    <Label GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="2">Description</Label>
    <TextField fx:id="description" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.halignment="LEFT" GridPane.rowIndex="2" />

    <Label GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="3">Distance</Label>
    <TextField fx:id="distance" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.halignment="LEFT" GridPane.rowIndex="3" />

    <Label GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="4">Start</Label>
    <TextField fx:id="start" prefHeight="26.0" prefWidth="50.0" GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.halignment="LEFT" GridPane.rowIndex="4" />

    <Label GridPane.columnIndex="2" GridPane.halignment="LEFT" GridPane.rowIndex="4">End</Label>
    <TextField fx:id="end" prefWidth="50.0" GridPane.columnIndex="3" GridPane.halignment="LEFT" GridPane.rowIndex="4" />


    <ImageView fx:id="preview" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.rowSpan="3" GridPane.valignment="CENTER"  preserveRatio="true" fitHeight="100"/>



    <GridPane GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.halignment="CENTER" GridPane.rowIndex="8" GridPane.valignment="CENTER">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <rowConstraints>
            <RowConstraints vgrow="ALWAYS" />
        </rowConstraints>

        <Button onAction="#cancelCreation" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="CENTER">Cancel</Button>
        <Button onAction="#updatePreview" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="CENTER">Update Preview</Button>
        <Button onAction="#saveTour" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="CENTER">Save</Button>

    </GridPane>

</GridPane>
